{
  "version": 2,
  "builds": [
    {
      "src": "odoo-proxy-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "images/**",
      "use": "@vercel/static"
    },
    {
      "src": "site-config.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/odoo-proxy-server.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/admin.html",
      "dest": "/admin.html"
    },
    {
      "src": "/site-config.json",
      "dest": "/site-config.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
